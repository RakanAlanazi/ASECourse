<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.umkc.rakan.weatherapp.HomeActivity"
    tools:showIn="@layout/activity_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/weatherbg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:id="@+id/Btn_Logout"
            android:onClick="logout"
            android:layout_marginBottom="27dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/Btn_Search"
            android:layout_toStartOf="@+id/Btn_Search" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="temperatureDetail"
            android:text="Search"
            android:id="@+id/Btn_Search"
            android:layout_alignBottom="@+id/Lbl_City"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Lbl_City"
            android:hint="Enter City ID"
            android:layout_above="@+id/Txt_City"
            android:layout_alignLeft="@+id/Lbl_Max_Temp"
            android:layout_alignStart="@+id/Lbl_Max_Temp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Txt_City"
            android:text="City"
            android:textIsSelectable="true"
            android:visibility="invisible"
            android:layout_alignTop="@+id/Lbl_Country"
            android:layout_toLeftOf="@+id/Lbl_City"
            android:layout_toStartOf="@+id/Lbl_City"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Lbl_Temp"
            android:text="Temperature"
            android:visibility="invisible"
            android:layout_below="@+id/Txt_City"
            android:layout_alignLeft="@+id/Txt_City"
            android:layout_alignStart="@+id/Txt_City"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Lbl_Country"
            android:text="Country"
            android:visibility="invisible"
            android:layout_marginTop="108dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/Lbl_Max_Temp"
            android:layout_alignEnd="@+id/Lbl_Max_Temp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Lbl_Humidity"
            android:text="Humidity"
            android:visibility="invisible"
            android:layout_below="@+id/Lbl_Country"
            android:layout_alignLeft="@+id/Lbl_Country"
            android:layout_alignStart="@+id/Lbl_Country"
            android:layout_toStartOf="@+id/Btn_Search"
            android:layout_alignRight="@+id/Btn_Search"
            android:layout_alignEnd="@+id/Btn_Search"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Lbl_Min_Temp"
            android:text="Minimum Tempature"
            android:visibility="invisible"
            android:layout_below="@+id/Lbl_Max_Temp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Lbl_Max_Temp"
            android:text="Maximum Tempature"
            android:visibility="invisible"
            android:layout_below="@+id/Lbl_Temp"
            android:layout_alignLeft="@+id/Lbl_Min_Temp"
            android:layout_alignStart="@+id/Lbl_Min_Temp"
            android:textColor="#ffffff" />

    </RelativeLayout>
</RelativeLayout>